{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "module": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "nodenext"
    ],
    "moduleResolution": "nodenext", // Важно для корректного поиска модулей
    "esModuleInterop": true, // Для корректной работы с импортами CommonJS
    "allowSyntheticDefaultImports": true, // Позволяет импортировать модули по умолчанию
    "strict": true, // Включить строгий режим (рекомендуется)
    "skipLibCheck": true // Пропуск проверки типов в библиотеках (ускоряет сборку)
  }
}